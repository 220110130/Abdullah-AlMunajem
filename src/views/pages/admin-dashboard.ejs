<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Super Admin Dashboard</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/styles.css">

</head>

<body>

  <div class="container">
    <h1 class="mb-4">Super Admin Dashboard</h1>
    <div class="row">
      <div class="col-md-4">
        <div class="card text-white bg-primary h-100 min-height">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title">View all users</h5>
            <p class="card-text" id="vendorCount">Loading...</p>
            <a href="/system-users" class="btn btn-light">View all users</a>
          </div>
        </div>
      </div>


      <div class="col-md-4">
        <div class="card text-white bg-success h-100 min-height">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title">Customer Accounts</h5>
            <p class="card-text">View and Manage Customers Accounts</p>
            <a href="/customer-list" class="btn btn-light">Manage Customers</a>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card text-white bg-warning h-100 min-height">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title">Vendors Accounts</h5>
            <p class="card-text">View and Manage Vendors Accounts</p>
            <a href="/requests" class="btn btn-light">Manage Vendors</a>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4">


      <div class="col-md-4">
        <div class="card text-white bg-danger h-100 min-height">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title">System Orders</h5>
            <p class="card-text">View and Manage System Orders</p>
            <a href="/view-orders" class="btn btn-light">Manage Orders</a>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card text-white bg-info h-100 min-height">
          <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title">System Products</h5>
            <p class="card-text">View and Manage System Products</p>
            <a href="/system-products" class="btn btn-light">Manage Products</a>
          </div>
        </div>
      </div>

    </div>
  </div>


  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    fetch('/user/count')
      .then(response => response.json())
      .then(data => {
        document.getElementById('vendorCount').textContent = "Total Vendors: "+data.vendorCount + " Total Customers: "+data.customerCount;
      })
      .catch(error => console.error('Error fetching user counts:', error));
  </script>
</body>

</html>